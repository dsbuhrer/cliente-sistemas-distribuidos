<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.sd.client.view.controllers.LoginController">
    <Label text="Login Empresa" />

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <Label text="E-mail" />
   <TextField fx:id="email_tf" />
   <Label text="Senha" />
   <TextField fx:id="passwd_tf" />
    <Button fx:id="login_btn" onAction="#loginEmpresa" text="Entrar" />
    <Label fx:id="welcomeText" />
    <Button fx:id="login_candidato_btn" mnemonicParsing="false" onAction="#loginCandidato" text="Login Candidato" />
    <Button fx:id="add_usr_btn" mnemonicParsing="false" onAction="#createUser" text="Novo Candidato" />
    <Button fx:id="add_empresa_btn" mnemonicParsing="false" onAction="#createEmpresa" text="Nova Empresa" />

</VBox>
